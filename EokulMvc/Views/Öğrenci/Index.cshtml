@model List<ResultÖğrenciDto>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <link rel="stylesheet" href="~/web/stylee.css">
    <title>Index</title>
</head>
<body>


    <div class="container">

        @await Component.InvokeAsync("_sidebar")

        <main>
            <div class="recent-orders">
                <h2></h2>

                <table>
                    <thead>
                        <tr>
                            <th>ÖğrenciId</th>
                            <th>Okul Numarası</th>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Cinsiyet</th>
                            <th>Devam Durumu</th>
                            <th>Ön Kayıt ID</th>
                            <th>Sınıf ID</th>
                            <th>Şube</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ÖğrenciId</td>
                                <td>@item.OkulNumarası</td>
                                <td>@item.Ad</td>
                                <td>@item.Soyad</td>
                                <td>@item.Cinsiyet</td>
                                <td>@item.DevamDurumu</td>
                                <td>@item.ÖnKayıtId</td>
                                <td>@item.SınıfId</td>
                                <td>@item.Şube</td>

                                <td>
                                    <a href="/Öğrenci/Delete/@item.ÖğrenciId" class="btn btn-dark">Sil</a>
                                    <a href="/Öğrenci/Edit/@item.ÖğrenciId" class="btn btn-outline-danger">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Öğretmen/Create/" class="btn btn-primary">Yeni Açıklama Ekle</a>

            </div>
            <main>
    </div>
</body>
</html>

