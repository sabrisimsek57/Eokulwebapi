    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" href="~/webb/addsale.css">

    <title>Create</title>
</head>
<body>
    <div class="form-container">

        <form asp-action="Create" method="post">
