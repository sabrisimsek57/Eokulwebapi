@model UpdateDersDto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/webb/addsale.css">
    <title>Edit</title>
</head>
<body>
    <div class="form-container">

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="DersId" />

            <div class="form-group">
                <label asp-for="DersAdı" class="control-label"></label>
                <input asp-for="DersAdı" class="form-control" />
                <span asp-validation-for="DersAdı" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DersKod" class="control-label"></label>
                <input asp-for="DersKod" class="form-control" />
                <span asp-validation-for="DersKod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HD_Sırası" class="control-label"></label>
                <input asp-for="HD_Sırası" class="form-control" />
                <span asp-validation-for="HD_Sırası" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ÖğretmenId" class="control-label"></label>
                <input asp-for="ÖğretmenId" class="form-control" />
                <span asp-validation-for="ÖğretmenId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</body>
</html>
