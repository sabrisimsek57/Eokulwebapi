@using Eokulwebapi.Dtos.SınıfDto
@model UpdateSınıfDto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/webb/addsale.css">
    <title>Update</title>
</head>
<body>

    <div class="form-container">

        <form asp-action="Update" method="post">
            <input asp-for="SınıfId" type="hidden" class="form-control" />

            <div class="form-group">
                <label asp-for="SınıfAdı" class="control-label"></label>
                <input asp-for="SınıfAdı" class="form-control" />
                <span asp-validation-for="SınıfAdı" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Şubesi" class="control-label"></label>
                <input asp-for="Şubesi" class="form-control" />
                <span asp-validation-for="Şubesi" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</body>
</html>
