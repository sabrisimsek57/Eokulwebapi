@using Eokulwebapi.Dtos.DersProgramıDto
@model List<ResultDersProgramıDto>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <link rel="stylesheet" href="~/web/stylee.css">
    <title>GetAllDersProgramı</title>
</head>
<body>
    <div class="container">

        @await Component.InvokeAsync("_sidebar")

        <main>
            <div class="recent-orders">
                <h2></h2>

                <table>
                    <thead>
                        <tr>
                            <th>DersProgramıId</th>
                            <th>Gün</th>
                            <th>KaçıncıDers</th>
                            <th>DersAdı</th>
                            <th>SınıfId</th>

                            <th>Sil</th>
                            <th>Güncelle</th>
                         






                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                            <tr>
                                <td>@item.DersProgramıId</td>
                                <td>@item.Gün</td>
                                <td>@item.KaçıncıDers</td>
                                <td>@item.DersAdı</td>
                                <td>@item.SınıfId</td>





                               

                                <td><a href="/DersProgram/Delete/@item.DersProgramıId" class="btn btn-dark">Sil</a></td>
                                <td><a href="/DersProgram/Edit/@item.DersProgramıId" class="btn btn-outline-danger">Güncelle</a></td>
                             

                            </tr>

                        }
                    </tbody>
                </table>
                <a href="/DersProgram/CreateDersProgramı/" class="btn btn-primary">Yeni Açıklama Ekle</a>
                <a href="/DersProgram/GetDersProgramıBySınıfId/" class="btn btn-primary">Sınıfa göre ders programı</a>
                <a href="/DersProgram/GetDersProgramıByÖğretmenId/" class="btn btn-primary">Öğretmene göre ders programı</a>

            </div>
            <main>
    </div>
</body>
</html>
